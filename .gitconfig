[user]
	name = Max Pushkarov
[init]
	defaultBranch = main
[core]
	editor = nvim
	excludesFile = ~/.gitignore
[alias]
	a = add
	aa = add --all
	b = branch
	c = commit
	cl = clone --recurse-submodules
	co = checkout
  cp = cherry-pick
	d = diff
	f = fetch
	fa = git fetch --all --prune --jobs=10
	lg = log --stat --graph
	p = push
	pf = push --force
	rb = rebase
	rs = restore
	rss = restore --staged
	st = status
	sh = stash
	shu = stash --include-untracked
	shp = stash pop
	sw = switch
	up = pull --ff-only
	w = worktree
	wa = worktree add
	wl = worktree list
	wm = worktree move
	wrm = worktree remove
[pull]
	ff = only
[ghq]
	root = ~/dev

# delta
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true    # use n and N to move between diff sections
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default

